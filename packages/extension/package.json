{
  "name": "codeprism",
  "type": "module",
  "displayName": "codeprism â€“ Code Context Engine",
  "description": "Watches local git changes and syncs them to the codeprism engine for knowledge card invalidation. Works with Cursor, Windsurf, VS Code and any editor that supports VS Code extensions.",
  "version": "0.1.0",
  "publisher": "codeprism",
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:.git"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codeprism.syncNow",
        "title": "codeprism: Sync Current Changes"
      },
      {
        "command": "codeprism.showStatus",
        "title": "codeprism: Show Connection Status"
      },
      {
        "command": "codeprism.reindex",
        "title": "codeprism: Trigger Full Re-index"
      }
    ],
    "configuration": {
      "title": "codeprism",
      "properties": {
        "codeprism.engineUrl": {
          "type": "string",
          "default": "http://localhost:4000",
          "description": "URL of the codeprism engine server."
        },
        "codeprism.autoSync": {
          "type": "boolean",
          "default": true,
          "description": "Automatically sync git changes on file save."
        },
        "codeprism.syncDebounceMs": {
          "type": "number",
          "default": 2000,
          "description": "Debounce interval (ms) before sending sync after a save."
        }
      }
    }
  },
  "scripts": {
    "build": "esbuild src/extension.ts --bundle --outdir=dist --platform=node --external:vscode --format=cjs",
    "watch": "esbuild src/extension.ts --bundle --outdir=dist --platform=node --external:vscode --format=cjs --watch",
    "package": "npx @vscode/vsce package --no-dependencies",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@vitest/coverage-v8": "^4.0.18",
    "esbuild": "^0.24.0",
    "typescript": "^5.7.0",
    "vitest": "^4.0.18"
  }
}
