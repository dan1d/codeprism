{
  "name": "codeprism",
  "version": "0.1.0",
  "private": true,
  "description": "Shared context layer for AI coding tools. Parses your codebase, builds a knowledge graph, and serves context to Cursor, Claude Code, and Windsurf via MCP.",
  "license": "BUSL-1.1",
  "homepage": "https://codeprism.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/codeprism/codeprism.git"
  },
  "keywords": [
    "mcp",
    "code-context",
    "knowledge-graph",
    "ai-coding",
    "cursor",
    "claude",
    "windsurf",
    "codebase-search",
    "rag",
    "developer-tools"
  ],
  "scripts": {
    "dev": "pnpm --filter @codeprism/engine dev",
    "dev:dashboard": "pnpm --filter @codeprism/dashboard dev",
    "build": "pnpm --filter @codeprism/dashboard build && pnpm --filter @codeprism/engine build",
    "build:engine": "pnpm --filter @codeprism/engine build",
    "build:dashboard": "pnpm --filter @codeprism/dashboard build",
    "start": "pnpm --filter @codeprism/engine start",
    "codeprism": "pnpm --filter @codeprism/engine codeprism",
    "index": "pnpm --filter @codeprism/engine index",
    "index-repos": "pnpm --filter @codeprism/engine index",
    "eval": "cd eval && source .venv/bin/activate && python evaluate.py --ragas",
    "lint": "pnpm -r lint",
    "test": "pnpm --filter @codeprism/engine test",
    "ci": "pnpm build && pnpm test"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "tree-sitter",
      "tree-sitter-javascript",
      "tree-sitter-ruby",
      "tree-sitter-typescript",
      "tree-sitter-vue",
      "esbuild",
      "onnxruntime-node",
      "protobufjs",
      "sharp"
    ]
  },
  "dependencies": {
    "commander": "^14.0.3"
  }
}
