{
  "name": "srcmap",
  "version": "0.1.0",
  "private": true,
  "description": "Code context engine for AI coding tools. Parses your codebase, builds a knowledge graph, and serves context via MCP.",
  "license": "AGPL-3.0",
  "scripts": {
    "dev": "pnpm --filter @srcmap/engine dev",
    "dev:dashboard": "pnpm --filter @srcmap/dashboard dev",
    "build": "pnpm --filter @srcmap/dashboard build && pnpm --filter @srcmap/engine build",
    "build:engine": "pnpm --filter @srcmap/engine build",
    "build:dashboard": "pnpm --filter @srcmap/dashboard build",
    "start": "pnpm --filter @srcmap/engine start",
    "srcmap": "pnpm --filter @srcmap/engine srcmap",
    "index": "pnpm --filter @srcmap/engine index",
    "index-repos": "pnpm --filter @srcmap/engine index",
    "eval": "cd eval && source .venv/bin/activate && python evaluate.py --ragas",
    "lint": "pnpm -r lint",
    "test": "pnpm --filter @srcmap/engine test",
    "ci": "pnpm build && pnpm test"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "tree-sitter",
      "tree-sitter-javascript",
      "tree-sitter-ruby",
      "tree-sitter-typescript",
      "tree-sitter-vue",
      "esbuild",
      "onnxruntime-node",
      "protobufjs",
      "sharp"
    ]
  },
  "dependencies": {
    "commander": "^14.0.3"
  }
}
